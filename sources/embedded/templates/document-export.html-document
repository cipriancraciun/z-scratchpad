<!doctype html>
<html>
	<head>
		<title>
			{{- if .Document.Title -}}
				{{ .Document.Title }}
			{{- else -}}
				[{{ .Document.Identifier }}]
			{{- end -}}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<style>
			{{ .ThemeCss }}
		</style>
		<script>
			(function () {
				"use strict";
				function _reload () {
					if (window.location.search != "?reload") {
						return;
					}
					if (window.history.scrollRestoration !== undefined) {
						window.history.scrollRestoration = "auto";
					}
					window.history.go ();
				}
				window.setTimeout (_reload, 1000);
			} ());
		</script>
	</head>
	<body>
		<header class="markdown-header">
			{{ if .Document.Title }}<span>{{ .Document.Title }}</span>{{ end }}
			<span>[{{ .Document.Identifier }}]</span>
			{{ if .Document.Timestamp.IsZero | not }}<span>(<time datetime="{{ .Document.Timestamp.Format "2006-01-02" }}">{{ .Document.Timestamp.Format "2006-01-02 15:04:05" }}</time>)</span>{{ end }}
		</header>
		<main class="markdown-body">
{{ .DocumentHtml }}
		</main>
	</body>
</html>
